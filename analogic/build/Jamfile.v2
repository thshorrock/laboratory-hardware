

project  analogic
	: source-location ../src
	: default-build  <threading>multi 
	: build-dir $(TOP)/build
  	: usage-requirements <include>../include
	: requirements 
	<include>../include/
;

lib analogic : remote_control.cpp 
     /lib/hardware-coms-manager	
